{
    "manifest_version": 2,
    "name": "QR-Code Creator",
    "version": "0.1.0",
    "description": "An extension to process encrypted password information from Android by communicating in QR Code, and auto fill them in web pages.",
    "icons": {
        "1": "images/popup.png"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js":      ["content.js"]
    }],
    "permissions": [
        "http://192.168.0.2/",
        "tabs",
        "activeTab"
    ],
    "browser_action": {
        "default_action": {
            "1": "images/popup.png"
        },
        "default_title": "Create QRCode",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net/; object-src 'self'"
}
